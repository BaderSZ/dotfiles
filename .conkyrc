background yes
override_utf8_locale yes
use_xft yes
xftfont Open Sans:size=10
xftalpha 1
update_interval 3.0
total_run_times 0

own_window yes
own_window_transparent no
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager 
own_window_argb_visual yes
own_window_argb_value 80

double_buffer yes
minimum_size 200 200
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color FFFFFF
default_shade_color 000000
default_outline_color 828282
alignment top_right
gap_x 12
gap_y 28
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
##############################################
#  Output
##############################################

TEXT

SYSTEM 
${hr}
${font StyleBats:size=16}A${font} CPU:   ${cpu cpu0}% ${alignr}${cpubar cpu1 8,60}
${font StyleBats:size=16}g${font} RAM:   $mem/$memmax ${alignr}${membar 8,60}
${font StyleBats:size=16}j${font} SWAP:  $swap/$swapmax ${alignr}${swapbar 8,60}
${font StyleBats:size=16}q${font} UPTIME: ${alignr}${uptime}

TOP CPU 
${hr}
${top name 1}${alignr}${top cpu 1} %
${top name 2}${alignr}${top cpu 2} %
${top name 3}${alignr}${top cpu 3} %

TOP MEMORY 
${hr}
${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
${top_mem name 3}${alignr}${top mem 3} %
